extends layout

block content
    h1 #{title}
    form(method='POST', action='/users/add')
      #form-group
        label Username:
        input.form-control(name='username', type='text')
      #form-group
        label Email:
        input.form-control(name='email', type='text')
      #form-group
        label Password:
        input.form-control(name='password', type='text')
      #form-group
        label Re-Type Password:
        input.form-control(name='repassword', type='text')
      br    
      input.btn.btn-primary(type='submit',value='Register')
